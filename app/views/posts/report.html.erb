<h1>Report of posts</h1>

<table class="articleCenter">
  <thead>
    <tr>
      <th>Title</th>
      <th>Likes</th>
      <th>Comments</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.likes %></td>
        <td><%= @comments.where("post_id = " +post.id.to_s).count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

